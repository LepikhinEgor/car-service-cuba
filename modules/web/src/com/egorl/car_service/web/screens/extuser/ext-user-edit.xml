<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        xmlns:ext="http://schemas.haulmont.com/cuba/window-ext.xsd"
        class="com.egorl.car_service.web.screens.extuser.ExtUserEditor"
        extends="com/haulmont/cuba/gui/app/security/user/edit/user-edit.xml"
        messagesPack="com.egorl.car_service.web.screens.extuser">
    <dsContext>
        <datasource id="userDs" class="com.egorl.car_service.entity.ExtUser" view="_local"/>
        <collectionDatasource id="countriesDs" class="com.egorl.car_service.entity.Country" view="_local">
            <query>select c from carservice_Country c</query>
        </collectionDatasource>
    </dsContext>
    <layout>
        <groupBox id="propertiesBox">
            <grid id="propertiesGrid">
                <rows>
                    <row id="propertiesRow">
                        <fieldGroup id="fieldGroupLeft">
                            <column>
                                <field ext:index="3" id="defaultCountry" property="defaultCountry">
                                    <lookupPickerField id="countryField" datasource="userDs" optionsDatasource="countriesDs" property="defaultCountry"/>
                                </field>
<!--                                <LookupField id="carDealerField" optionsContainer="CarDealersDc" property="carDealer">-->
<!--                                    <actions>-->
<!--                                        <action id="lookup" type="picker_lookup"/>-->
<!--                                    </actions>-->
<!--                                </LookupField>-->
                            </column>
                        </fieldGroup>
                    </row>
                </rows>
            </grid>
        </groupBox>
    </layout>
</window>
